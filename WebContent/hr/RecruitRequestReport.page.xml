<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
	no-conversation-view-id="/hr/RecruitRequestReport.xhtml" login-required="true">
	<restrict>#{caPrivilege.viewableReport and not identity.hasRole('disabledUser')}</restrict>
	<begin-conversation join="true" flush-mode="AUTO" />
	
	<action execute="#{userHome.onloadAllUsers()}" on-postback="false"/>
	<action execute="#{rrrHome.onloadAvailableOrgUnits()}" on-postback="false"/>	
	
	<navigation from-action="#{rrrHome.search()}">		
		<rule if-outcome="failure">
			<redirect view-id="/hr/RecruitRequestReport.xhtml" 
				include-page-params="false" />
		</rule>
	</navigation>

	<navigation from-action="#{rrrHome.export()}">		
		<rule if-outcome="failure">
			<redirect view-id="/hr/RecruitRequestReport.xhtml" 
				include-page-params="false" />
		</rule>
	</navigation>
	
	
	<navigation from-action="#{rrrHome.searchByThisWeek()}">
		<rule if-outcome="failure">
			<redirect view-id="/hr/RecruitRequestReport.xhtml" 
				include-page-params="false" />
		</rule>
	</navigation>
	
	<navigation from-action="#{rrrHome.searchByLastWeek()}">
		<rule if-outcome="failure">
			<redirect view-id="/hr/RecruitRequestReport.xhtml" 
				include-page-params="false" />
		</rule>
	</navigation>
	
	<navigation from-action="#{rrrHome.searchByThisMonth()}">
		<rule if-outcome="failure">
			<redirect view-id="/hr/RecruitRequestReport.xhtml" 
				include-page-params="false" />
		</rule>
	</navigation>
	
	<navigation from-action="#{rrrHome.searchByLastMonth()}">
		<rule if-outcome="failure">
			<redirect view-id="/hr/RecruitRequestReport.xhtml" 
				include-page-params="false" />
		</rule>
	</navigation>

</page>