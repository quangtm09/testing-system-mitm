<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
	login-required="true">
	<restrict>
		#{(interviewScheduleHome.giveableHRResult(interviewSchedule) 
			or interviewScheduleHome.editableHrResult(interviewSchedule)) 
			and (interviewSchedule.itsStatus eq  'Open')
			and not identity.hasRole('disabledUser')}
	</restrict>
	<begin-conversation join="true" flush-mode="auto" />
	<param name="interviewScheduleId" value="#{hrResultBLO.interviewScheduleId}" />
	<param name="scheduleId" value="#{hrResultBLO.interviewScheduleId}" />
	<param name="action" value="#{hrResultBLO.action}" />

	<navigation from-action="#{hrResultBLO.saveHRInterviewSchedule()}">
		<rule if-outcome="updated">
			<end-conversation before-redirect="true"/>
			<redirect view-id="/InterviewScheduleList.xhtml" include-page-params="false"/>
		</rule>
		<rule if-outcome="persisted">
			<end-conversation before-redirect="true"/>
			<redirect view-id="/InterviewScheduleList.xhtml" include-page-params="false"/>
		</rule>
		<rule if-outcome="failure">
			<render view-id="/HrResultEdit.xhtml"/>
		</rule>
	</navigation>

</page>