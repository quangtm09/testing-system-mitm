<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
	login-required="true" no-conversation-view-id="/RecruitRequestList.xhtml">
	<restrict>#{((rrPrivilege.viewableRecruitRequest 
		and recruitRequestHome.rrCreatedBy(recruitRequestHome.instance.user.usrUserId) ) or identity.hasRole('hr'))
		and not identity.hasRole('disabledUser')
		and not	recruitRequestHome.instance.status.equalsIgnoreCase('Rejected')
		and not recruitRequestHome.instance.status.equalsIgnoreCase('Closed')}
	</restrict>
	<begin-conversation flush-mode="auto" join="true"/>
	
	<param name="fromView" value="#{recruitRequestHome.fromView}"/>	
	<param name="recruitRequestRcrRecruitRequestId"
		value="#{recruitRequestHome.recruitRequestRcrRecruitRequestId}" />			
	<navigation from-action="#{recruitRequestHome.assignRecruitRequest()}">
		<rule if-outcome="updated">
			<end-conversation before-redirect="true" />
			<redirect view-id="/RecruitRequestList.xhtml" include-page-params="false" />
		</rule>
		<rule if-outcome="failure">
			<render view-id="/RecruitRequestHandledBy.xhtml" />
		</rule>
	</navigation>
</page>