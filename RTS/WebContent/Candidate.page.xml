<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
	login-required="true" no-conversation-view-id="/CandidateList.xhtml">
	<restrict>#{caPrivilege.addableCandidate and not identity.hasRole('disabledUser')}</restrict>
	<begin-conversation flush-mode="auto" join="true"/>
	<action execute="#{candidateHome.fetchFileUploadBean()}" on-postback="false"/>
	
	<param name="fromView" value="#{candidateHome.fromView}"/>
	<param name="candidateFrom" />
	<param name="candidateCddCandidateId" value="#{candidateHome.candidateCddCandidateId}" />
	<param name="recruitRequestFrom" />
	<param name="recruitRequestRcrRecruitRequestId"
		value="#{recruitRequestHome.recruitRequestRcrRecruitRequestId}" />
	<param name="userFrom" />
	<param name="userUsrUserId" value="#{userHome.userUsrUserId}" />	
	
	<navigation from-action="#{candidateBussinessBean.changeCandidateStatus()}">
		<rule if-outcome="updated">
			<render view-id="/Candidate.xhtml" />
		</rule>
		<rule if-outcome="failure">
			<render view-id="/Candidate.xhtml" />
		</rule>
	</navigation>
</page>