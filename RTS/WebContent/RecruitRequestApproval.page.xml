<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
	login-required="true" no-conversation-view-id="/RecruitRequestApprovalList.xhtml">
	<restrict>#{rrPrivilege.viewableRecruitRequest 
			and not identity.hasRole('disabledUser')
			and recruitRequestHome.instance.status.equalsIgnoreCase('Open') 
			and recruitRequestHome.instance.approvedBy.usrUserName.equalsIgnoreCase(identity.username)}</restrict>
	<begin-conversation flush-mode="auto" join="true"/>
	
	<param name="fromView" value="#{recruitRequestHome.fromView}"/>	
	<param name="recruitRequestRcrRecruitRequestId"
		value="#{recruitRequestHome.recruitRequestRcrRecruitRequestId}" />
		
	<navigation from-action="#{recruitRequestHome.changeRecruitRequestStatus('Approved')}">
		<rule if-outcome="updated">
			<end-conversation before-redirect="true" />
			<redirect view-id="/RecruitRequestApprovalList.xhtml" include-page-params="false" />
		</rule>
		<rule if-outcome="failure">
			<render view-id="/RecruitRequestApproval.xhtml" />
		</rule>
	</navigation>	
	
	<navigation from-action="#{recruitRequestHome.changeRecruitRequestStatus('Rejected')}">
		<rule if-outcome="updated">
			<end-conversation before-redirect="true" />
			<redirect view-id="/RecruitRequestApprovalList.xhtml" include-page-params="false" />
		</rule>
		<rule if-outcome="failure">
			<render view-id="/RecruitRequestApproval.xhtml" />
		</rule>
	</navigation>
</page>