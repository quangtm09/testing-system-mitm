<?xml version="1.0" encoding="UTF-8"?>
<page login-required="true" no-conversation-view-id="/users/List.xhtml"
	xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">
	<restrict>#{identity.hasRole('admin') and identity.username.equalsIgnoreCase(userHome.instance.approvedBy) and not identity.hasRole('disabledUser')}</restrict>
	<begin-conversation flush-mode="AUTO" join="true" />
	<action execute="#{userHome.wire()}" />
	<action execute="#{userHome.onloadSelectedUserRoles()}" on-postback="false"/> 
	<action execute="#{userHome.onloadUserRoles()}" on-postback="false"/>
	<param name="fromView" />
	<param name="userUsrUserId" value="#{userHome.userUsrUserId}" />
	
	<navigation from-action="#{userHome.approve()}">
		<rule if-outcome="updated">
			<end-conversation before-redirect="true" />
			<redirect include-page-params="false" view-id="/users/List.xhtml" />
		</rule>
		<rule if-outcome="failure">
			<render view-id="/users/Approve.xhtml" />
		</rule>
	</navigation>
	
</page>
