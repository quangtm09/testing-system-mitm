<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
	no-conversation-view-id="/users/List.xhtml" login-required="true">
	<restrict>#{identity.hasRole('admin') and not identity.hasRole('disabledUser') }</restrict>
	<begin-conversation flush-mode="AUTO" join="true" />

	<action execute="#{userHome.onloadAllUsers()}" on-postback="false"/>
	<action execute="#{userHome.wire()}" />
	<param name="fromView" />
	
	<param name="userUsrUserId"	value="#{userHome.userUsrUserId}" />
		
	<navigation from-action="#{userHome.persist()}">
		<rule if-outcome="persisted"> 
			<end-conversation before-redirect="true"/>
			<redirect include-page-params="false" view-id="/users/List.xhtml" />
		</rule>	
		
		<rule if-outcome="failure"> 
			<render view-id="/users/List.xhtml" />
		</rule>	
	</navigation>
	
</page>