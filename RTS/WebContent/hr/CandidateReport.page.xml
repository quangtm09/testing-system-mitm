<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
	no-conversation-view-id="/hr/CandidateReport.xhtml" login-required="true">
	<restrict>#{(caPrivilege.viewableReport || identity.hasRole('pm')) and not identity.hasRole('disabledUser')}</restrict>
	<begin-conversation join="true" flush-mode="AUTO" />	
	
	<action execute="#{userHome.onloadAllUsers()}" on-postback="false"/>
	<action execute="#{candidateHome.listCandidateReportOrgUnits(identity.hasRole('pm'))}" on-postback="false"/>

	<navigation from-action="#{candidateReportHome.search()}">
		<rule if-outcome="failure">
			<redirect view-id="/hr/CandidateReport.xhtml" 
				include-page-params="false" />
		</rule>
	</navigation>
	
	<navigation from-action="#{candidateReportHome.searchByThisWeek()}">
		<rule if-outcome="failure">
			<redirect view-id="/hr/CandidateReport.xhtml" 
				include-page-params="false" />
		</rule>
	</navigation>
	
	<navigation from-action="#{candidateReportHome.searchByLastWeek()}">
		<rule if-outcome="failure">
			<redirect view-id="/hr/CandidateReport.xhtml" 
				include-page-params="false" />
		</rule>
	</navigation>
	
	<navigation from-action="#{candidateReportHome.searchByThisMonth()}">
		<rule if-outcome="failure">
			<redirect view-id="/hr/CandidateReport.xhtml" 
				include-page-params="false" />
		</rule>
	</navigation>
	
	<navigation from-action="#{candidateReportHome.searchByLastMonth()}">
		<rule if-outcome="failure">
			<redirect view-id="/hr/CandidateReport.xhtml" 
				include-page-params="false" />
		</rule>
	</navigation>

</page>